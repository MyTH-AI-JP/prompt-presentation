{
  "version": 2,
  "buildCommand": "next build",
  "cleanUrls": true,
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "ignoreCommand": "if [ \"$VERCEL_ENV\" = \"production\" ]; then exit 1; else exit 0; fi",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/app/$1" }
  ]
} 